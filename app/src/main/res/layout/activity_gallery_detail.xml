<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <com.redmadintern.mikhalevich.security.ui.view.ScaleView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.redmadintern.mikhalevich.security.ui.view.ViewPagerFixed
        android:id="@+id/pager"
        android:background="@android:color/black"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/toolbar_layout"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/background_toolbar_gallery_detail">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:src="@drawable/ic_arrow_back_white_24dp"
            android:background="@drawable/btn_flat_background"/>

        <View
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btn_download"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:src="@drawable/ic_action_file_download"
            android:background="@drawable/btn_flat_background"/>

    </LinearLayout>

</merge>
